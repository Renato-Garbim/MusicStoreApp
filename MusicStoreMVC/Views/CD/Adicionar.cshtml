@model MusicStoreMVC.Models.CDViewModel.CDEditModel

@{
    ViewData["Title"] = "Music Store - Adicionar Novo CD";
}

<div class="text-center">
    <h1 class="display-4">Adicionar um Novo CD</h1>     

    <section>

        <div class="card-body">
            <form method="post">

                <div>
                    <label asp-for="Titulo">Título:</label>
                    <input asp-for="Titulo" class="form-control" />
                </div>

                <div>
                    <label asp-for="Ano">Ano:</label>
                    <input asp-for="Ano" class="form-control" />
                </div>

                <div>
                    <label asp-for="ListaGenero">Gênero:</label>
                    <select asp-for="GeneroId" class="form-control" asp-items="@(new SelectList(Model.ListaGenero, "Id", "Descricao"))">
                        <option value="">Selecione um Gênero</option>
                    </select>
                </div>
                
                <div>
                    <label asp-for="ListaArtista">Artista:</label>
                    <select asp-for="ArtistaId" class="form-control" asp-items="@(new SelectList(Model.ListaArtista, "Id", "Nome"))">
                        <option value="">Selecione um Artista</option>
                    </select>
                </div>

            </form>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </section>

</div>
